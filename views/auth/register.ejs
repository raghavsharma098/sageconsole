<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Sustainability Assessment Platform</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .auth-container {
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
        }
        
        .auth-card {
            max-width: 500px;
            width: 100%;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            padding: 3rem;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(74, 124, 89, 0.1);
        }
        
        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .auth-icon {
            font-size: 3rem;
            color: #059669;
            margin-bottom: 1rem;
        }
        
        .auth-title {
            font-size: 2rem;
            color: #065f46;
            margin-bottom: 0.5rem;
            font-weight: 700;
        }
        
        .auth-subtitle {
            color: #6c757d;
            font-size: 1rem;
            opacity: 0.8;
        }
        
        .form-group {
            position: relative;
            margin-bottom: 1.5rem;
        }
        
        .form-group i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #059669;
            z-index: 10;
            pointer-events: none;
            font-size: 1rem;
        }
        
        .form-control-icon {
            padding-left: 3rem !important;
            position: relative;
            z-index: 1;
        }
        
        .form-control {
            position: relative;
            z-index: 1;
        }
        
        .required {
            color: #e74c3c;
            font-size: 1.1rem;
        }
        
        .alert {
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            font-weight: 500;
        }
        
        .alert-error {
            background: linear-gradient(135deg, #f8d7da, #f5c6cb);
            border: 1px solid #f1aeb5;
            color: #721c24;
        }
        
        .auth-footer {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #d1fae5;
        }
        
        .auth-link {
            color: #059669;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .auth-link:hover {
            color: #065f46;
            text-decoration: underline;
        }
        
        /* Responsive Design for Auth */
        @media (max-width: 768px) {
            .auth-card {
                margin: 1rem;
                padding: 2rem 1.5rem;
            }
            
            .auth-title {
                font-size: 1.8rem;
            }
            
            .auth-icon {
                font-size: 2.5rem;
            }
        }
        
        @media (max-width: 480px) {
            .auth-card {
                padding: 1.5rem 1rem;
            }
            
            .form-group i {
                left: 0.8rem;
                font-size: 0.9rem;
            }
            
            .form-control-icon {
                padding-left: 2.5rem !important;
            }
            
            .auth-title {
                font-size: 1.6rem;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="main-content">
        <div class="container">
            <div class="auth-container">
                <div class="auth-card">
                    <div class="auth-header">
                        <div class="auth-icon">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <h2 class="auth-title">Company Registration</h2>
                        <p class="auth-subtitle">Join the sustainability assessment platform</p>
                    </div>

                    <% if (error) { %>
                        <div class="alert alert-error">
                            <i class="fas fa-exclamation-triangle"></i> <%= error %>
                        </div>
                    <% } %>

                    <form method="POST" action="/auth/register">
                        <div class="form-group">
                            <label for="companyName" class="form-label">Company Name <span class="required">*</span></label>
                            <div class="input-icon-wrapper">
                                <i class="fas fa-building"></i>
                                <input type="text" id="companyName" name="companyName" class="form-control form-control-icon" 
                                       placeholder="Enter your company name" value="<%= formData.companyName || '' %>" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email" class="form-label">Email Address <span class="required">*</span></label>
                            <div class="input-icon-wrapper">
                                <i class="fas fa-envelope"></i>
                                <input type="email" id="email" name="email" class="form-control form-control-icon" 
                                       placeholder="Enter your email address" value="<%= formData.email || '' %>" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="industry" class="form-label">Industry <span class="required">*</span></label>
                            <div class="input-icon-wrapper">
                                <i class="fas fa-industry"></i>
                                <select id="industry" name="industry" class="form-control form-select form-control-icon" required>
                                <option value="">Select your industry</option>
                                <option value="Textile" <%= formData.industry === 'Textile' ? 'selected' : '' %>>üßµ Textile</option>
                                <option value="Chemicals" <%= formData.industry === 'Chemicals' ? 'selected' : '' %>>‚öóÔ∏è Chemicals</option>
                                <option value="Pharmaceuticals" <%= formData.industry === 'Pharmaceuticals' ? 'selected' : '' %>>üíä Pharmaceuticals</option>
                                <option value="Automobile" <%= formData.industry === 'Automobile' ? 'selected' : '' %>>üöó Automobile</option>
                                <option value="Paper and Packaging" <%= formData.industry === 'Paper and Packaging' ? 'selected' : '' %>>üì¶ Paper and Packaging</option>
                                <option value="Other Manufacturing" <%= formData.industry === 'Other Manufacturing' ? 'selected' : '' %>>ÔøΩ Other Manufacturing</option>
                                <option value="Construction" <%= formData.industry === 'Construction' ? 'selected' : '' %>>üèóÔ∏è Construction</option>
                                <option value="Energy" <%= formData.industry === 'Energy' ? 'selected' : '' %>>‚ö° Energy</option>
                                <option value="Agriculture" <%= formData.industry === 'Agriculture' ? 'selected' : '' %>>üåæ Agriculture</option>
                                <option value="Retail" <%= formData.industry === 'Retail' ? 'selected' : '' %>>üè™ Retail</option>
                                <option value="Education" <%= formData.industry === 'Education' ? 'selected' : '' %>>üéì Education</option>
                                <option value="Others" <%= formData.industry === 'Others' ? 'selected' : '' %>>üè¢ Others (IT, Healthcare, Finance, Transportation, etc.)</option>
                            </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="companySize" class="form-label">Company Size <span class="required">*</span></label>
                            <div class="input-icon-wrapper">
                                <i class="fas fa-users"></i>
                                <select id="companySize" name="companySize" class="form-control form-select form-control-icon" required>
                                    <option value="">Select company size</option>
                                    <option value="1-10" <%= formData.companySize === '1-10' ? 'selected' : '' %>>üë• 1-10 employees</option>
                                    <option value="11-50" <%= formData.companySize === '11-50' ? 'selected' : '' %>>üë• 11-50 employees</option>
                                    <option value="50-100" <%= formData.companySize === '50-100' ? 'selected' : '' %>>üë• 50-100 employees</option>
                                    <option value="100-500" <%= formData.companySize === '100-500' ? 'selected' : '' %>>üë• 100-500 employees</option>
                                    <option value="500-1000" <%= formData.companySize === '500-1000' ? 'selected' : '' %>>üë• 500-1000 employees</option>
                                    <option value="1000+" <%= formData.companySize === '1000+' ? 'selected' : '' %>>üë• 1000+ employees</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="form-label">Password <span class="required">*</span></label>
                            <div class="input-icon-wrapper">
                                <i class="fas fa-lock"></i>
                                <input type="password" id="password" name="password" class="form-control form-control-icon" 
                                       placeholder="Enter a secure password" minlength="6" required>
                            </div>
                            <small class="form-text">Password must be at least 6 characters long</small>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword" class="form-label">Confirm Password <span class="required">*</span></label>
                            <div class="input-icon-wrapper">
                                <i class="fas fa-lock"></i>
                                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control form-control-icon" 
                                       placeholder="Confirm your password" minlength="6" required>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block btn-large">
                            <i class="fas fa-user-plus"></i> Create Account
                        </button>
                    </form>

                    <div class="auth-footer">
                        <p>Already have an account? <a href="/auth/login" class="auth-link">Sign in here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
    
    <script>
        // Password confirmation validation
        document.getElementById('confirmPassword').addEventListener('input', function() {
            const password = document.getElementById('password').value;
            const confirmPassword = this.value;
            
            if (password !== confirmPassword) {
                this.setCustomValidity('Passwords do not match');
                this.style.borderColor = '#e74c3c';
            } else {
                this.setCustomValidity('');
                this.style.borderColor = '#059669';
            }
        });
        
        // Real-time password validation
        document.getElementById('password').addEventListener('input', function() {
            const confirmPassword = document.getElementById('confirmPassword');
            if (confirmPassword.value && this.value !== confirmPassword.value) {
                confirmPassword.setCustomValidity('Passwords do not match');
                confirmPassword.style.borderColor = '#e74c3c';
            } else if (confirmPassword.value && this.value === confirmPassword.value) {
                confirmPassword.setCustomValidity('');
                confirmPassword.style.borderColor = '#059669';
            }
        });
    </script>
</body>
</html>
