<header class="header">
    <div class="container">
        <div class="header-content">
            <a href="/" class="logo">
                <i class="fas fa-leaf"></i> SAGE 
            </a>
            
            <nav class="nav">
                <% if (typeof companyId !== 'undefined' && companyId) { %>
                    <a href="/dashboard">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a href="/assessment">
                        <i class="fas fa-clipboard-list"></i> Assessment
                    </a>
                    <a href="/reports/generate">
                        <i class="fas fa-chart-line"></i> Reports
                    </a>
                    <span style="display: flex; align-items: center; gap: 0.5rem;">
                        <i class="fas fa-user-circle"></i> Welcome, <%= companyName %>
                    </span>
                    <a href="/auth/logout" class="btn-logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                <% } else { %>
                    <a href="/auth/login">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                    <a href="/auth/register">
                        <i class="fas fa-user-plus"></i> Register
                    </a>
                <% } %>
            </nav>
        </div>
    </div>
</header>
