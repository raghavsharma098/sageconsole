<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Panel</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .admin-header {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            padding: 1rem 0;
            box-shadow: 0 4px 20px rgba(220, 53, 69, 0.3);
            margin-bottom: 2rem;
        }
        
        .admin-nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .admin-logo {
            font-size: 1.8rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .admin-menu {
            display: flex;
            gap: 2rem;
            align-items: center;
        }
        
        .admin-menu a {
            color: white;
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        
        .admin-menu a:hover {
            background: rgba(255,255,255,0.1);
        }
        
        .admin-section {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 8px 25px rgba(0,0,0,0.08);
        }
        
        .compliance-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }
        
        .compliance-table th,
        .compliance-table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #e8f5e8;
        }
        
        .compliance-table th {
            background: linear-gradient(135deg, #f8fffe 0%, #e8f5e8 100%);
            font-weight: 600;
            color: #1e40af;
            position: sticky;
            top: 0;
        }
        
        .compliance-table tr:hover {
            background: rgba(74, 124, 89, 0.05);
        }
        
        .compliance-badge {
            padding: 0.4rem 1rem;
            border-radius: 25px;
            font-size: 0.9rem;
            font-weight: 600;
            text-align: center;
            min-width: 60px;
            display: inline-block;
        }
        
        .compliance-excellent {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
        }
        
        .compliance-good {
            background: linear-gradient(135deg, #17a2b8, #20c997);
            color: white;
        }
        
        .compliance-average {
            background: linear-gradient(135deg, #ffc107, #ffdb4a);
            color: #212529;
        }
        
        .compliance-poor {
            background: linear-gradient(135deg, #dc3545, #e94a5a);
            color: white;
        }
        
        .filter-section {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            align-items: center;
            flex-wrap: wrap;
        }
        
        .filter-select {
            padding: 0.5rem 1rem;
            border: 2px solid #e8f5e8;
            border-radius: 8px;
            font-size: 1rem;
            background: white;
        }
        
        .stats-summary {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }
        
        .summary-card {
            background: linear-gradient(135deg, #f8fffe 0%, #e8f5e8 100%);
            padding: 1.5rem;
            border-radius: 10px;
            text-align: center;
            border-left: 4px solid #3b82f6;
        }
        
        .summary-value {
            font-size: 2rem;
            font-weight: 700;
            color: #1e40af;
        }
        
        .summary-label {
            color: #6c757d;
            font-size: 0.9rem;
            font-weight: 500;
        }
        
        .admin-btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 6px;
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }
        
        .admin-btn-view {
            background: linear-gradient(135deg, #17a2b8, #20c997);
            color: white;
        }
        
        .admin-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }
    </style>
</head>
<body>
    <header class="admin-header">
        <div class="container">
            <div class="admin-nav">
                <div class="admin-logo">
                    <i class="fas fa-shield-alt"></i>
                    Admin Panel
                </div>
                <div class="admin-menu">
                    <a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                    <a href="/admin/questions"><i class="fas fa-question-circle"></i> Questions</a>
                    <a href="/admin/compliance-scores"><i class="fas fa-chart-bar"></i> Compliance Scores</a>
                    <a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </div>
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <h1 style="font-size: 2.5rem; color: #1e40af; margin-bottom: 2rem; font-weight: 700;">
                <i class="fas fa-chart-bar"></i> All Compliance Scores
            </h1>

            <!-- Summary Statistics -->
            <div class="stats-summary">
                <div class="summary-card">
                    <div class="summary-value" id="totalReports"><%= reports.length %></div>
                    <div class="summary-label">Total Reports</div>
                </div>
                <div class="summary-card">
                    <div class="summary-value" id="avgScore">
                        <% if (reports.length > 0) { %>
                            <%= Math.round(reports.reduce((sum, r) => sum + r.reportData.complianceScore, 0) / reports.length) %>%
                        <% } else { %>
                            0%
                        <% } %>
                    </div>
                    <div class="summary-label">Average Score</div>
                </div>
                <div class="summary-card">
                    <div class="summary-value" id="excellentCount">
                        <%= reports.filter(r => r.reportData.complianceScore >= 80).length %>
                    </div>
                    <div class="summary-label">Excellent (80%+)</div>
                </div>
                <div class="summary-card">
                    <div class="summary-value" id="needsImprovementCount">
                        <%= reports.filter(r => r.reportData.complianceScore < 50).length %>
                    </div>
                    <div class="summary-label">Needs Improvement</div>
                </div>
            </div>

            <!-- Filters -->
            <div class="filter-section">
                <label for="industryFilter">Filter by Industry:</label>
                <select id="industryFilter" class="filter-select">
                    <option value="">All Industries</option>
                    <option value="Textile">Textile</option>
                    <option value="Chemicals">Chemicals</option>
                    <option value="Pharmaceuticals">Pharmaceuticals</option>
                    <option value="Automobile">Automobile</option>
                    <option value="Paper and Packaging">Paper and Packaging</option>
                    <option value="Other Manufacturing">Other Manufacturing</option>
                    <option value="Construction">Construction</option>
                    <option value="Energy">Energy</option>
                    <option value="Agriculture">Agriculture</option>
                    <option value="Retail">Retail</option>
                    <option value="Education">Education</option>
                    <option value="Others">Others</option>
                </select>

                <label for="scoreFilter">Filter by Score Range:</label>
                <select id="scoreFilter" class="filter-select">
                    <option value="">All Scores</option>
                    <option value="excellent">Excellent (80%+)</option>
                    <option value="good">Good (65-79%)</option>
                    <option value="average">Average (50-64%)</option>
                    <option value="poor">Poor (<50%)</option>
                </select>
            </div>

            <!-- Compliance Scores Table -->
            <div class="admin-section">
                <% if (reports && reports.length > 0) { %>
                    <table class="compliance-table" id="complianceTable">
                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th>Company ID</th>
                                <th>Industry</th>
                                <th>Company Size</th>
                                <th>Compliance Score</th>
                                <th>Report Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% reports.forEach(report => { %>
                                <tr data-industry="<%= report.companyId.industry %>" 
                                    data-score="<%= report.reportData.complianceScore %>">
                                    <td><strong><%= report.companyId.companyName %></strong></td>
                                    <td><%= report.companyId.companyId %></td>
                                    <td><%= report.companyId.industry %></td>
                                    <td><%= report.companyId.companySize || 'Not specified' %></td>
                                    <td>
                                        <span class="compliance-badge 
                                            <% if (report.reportData.complianceScore >= 80) { %>compliance-excellent
                                            <% } else if (report.reportData.complianceScore >= 65) { %>compliance-good
                                            <% } else if (report.reportData.complianceScore >= 50) { %>compliance-average
                                            <% } else { %>compliance-poor<% } %>">
                                            <%= report.reportData.complianceScore %>%
                                        </span>
                                    </td>
                                    <td><%= new Date(report.generatedDate).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/company/<%= report.companyId.companyId %>/report" 
                                           class="admin-btn admin-btn-view">
                                            <i class="fas fa-eye"></i> View Report
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div style="text-align: center; padding: 3rem; color: #6c757d;">
                        <i class="fas fa-chart-bar" style="font-size: 4rem; margin-bottom: 1rem; opacity: 0.3;"></i>
                        <h3>No compliance reports generated yet</h3>
                        <p>Reports will appear here once companies complete their assessments.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script>
        // Filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const industryFilter = document.getElementById('industryFilter');
            const scoreFilter = document.getElementById('scoreFilter');
            const tableRows = document.querySelectorAll('#complianceTable tbody tr');

            function filterTable() {
                const selectedIndustry = industryFilter.value;
                const selectedScoreRange = scoreFilter.value;

                tableRows.forEach(row => {
                    const industry = row.getAttribute('data-industry');
                    const score = parseInt(row.getAttribute('data-score'));
                    
                    let showRow = true;

                    // Industry filter
                    if (selectedIndustry && industry !== selectedIndustry) {
                        showRow = false;
                    }

                    // Score range filter
                    if (selectedScoreRange) {
                        switch(selectedScoreRange) {
                            case 'excellent':
                                if (score < 80) showRow = false;
                                break;
                            case 'good':
                                if (score < 65 || score >= 80) showRow = false;
                                break;
                            case 'average':
                                if (score < 50 || score >= 65) showRow = false;
                                break;
                            case 'poor':
                                if (score >= 50) showRow = false;
                                break;
                        }
                    }

                    row.style.display = showRow ? '' : 'none';
                });
            }

            industryFilter.addEventListener('change', filterTable);
            scoreFilter.addEventListener('change', filterTable);
        });
    </script>
</body>
</html>
